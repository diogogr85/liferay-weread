<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/colorPrimary"/>
            <corners
                android:radius="500dp"/>

        </shape>
    </item>

    <item
        android:start="2dp"
        android:top="2dp"
        android:end="2dp"
        android:bottom="2dp">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@android:color/white"/>
            <corners
                android:radius="500dp"/>

        </shape>
    </item>

</layer-list>
